# Build the docker image with `npx nx docker-build nft-bridge`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nft-bridge`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nft-bridge && \
          adduser --system -G nft-bridge nft-bridge

COPY dist/apps/nft-bridge nft-bridge
RUN chown -R nft-bridge:nft-bridge .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nft-bridge --omit=dev -f install

CMD [ "node", "nft-bridge" ]
